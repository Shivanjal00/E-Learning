    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:layout_marginTop="-10dp"
        android:paddingBottom="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dp_20">

            <LinearLayout
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_download_gradient"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:id="@+id/txtSubjectName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/downloads"
                    android:textColor="@color/gray_10"
                    android:textSize="@dimen/sp_16" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_110"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/bg_circle_shadowed_white"
                    android:paddingHorizontal="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_10"
                    android:src="@drawable/ic_download_colored" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llNotesResources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_40"
                android:background="@drawable/rect_stroked_grey"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rect_behind"
                        android:padding="@dimen/dp_20" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/ic_chapter_bw" />
                </RelativeLayout>

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@drawable/ic_arrow"
                    android:text="@string/notes_resources"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llQueBankPaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/rect_stroked_grey"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rect_behind"
                        android:padding="@dimen/dp_20"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_18"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/que_bnk_icon_13"/>
                </RelativeLayout>

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@drawable/ic_arrow"
                    android:text="@string/question_bank_2023"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPreviousYearPaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/rect_stroked_grey"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rect_behind"
                        android:padding="@dimen/dp_20" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/ic_previous_papers_bw" />
                </RelativeLayout>

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@drawable/ic_arrow"
                    android:text="@string/previous_year_paper"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llModelPaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/rect_stroked_grey"
                android:orientation="horizontal"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/dp_105">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rect_behind"
                        android:padding="@dimen/dp_20" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_15"
                        android:src="@drawable/ic_model_paper_bw" />
                </RelativeLayout>

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:drawableRight="@drawable/ic_arrow"
                    android:text="@string/model_papers"
                    android:textColor="@color/black_100"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>