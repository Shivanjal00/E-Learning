<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/dp_5">

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="0.9"-->
<!--        android:scrollbars="none">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            android:background="@drawable/rect_background"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/intro_up_4_2"
                    android:visibility="visible"
                    android:layout_marginHorizontal="20dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgIntro3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

            </LinearLayout>


            <ImageView
                android:layout_width="64dp"
                android:layout_height="8dp"
                android:layout_marginTop="@dimen/dp_40"
                android:src="@drawable/ic_sldr_4"
                android:layout_gravity="center_horizontal"/>


            <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center"
                android:text="@string/solved_intro"
                android:textColor="@color/black_50"
                android:textSize="@dimen/sp_24"
                android:layout_marginHorizontal="@dimen/dp_8"/>

            <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/question_bank_2023_intro"
                android:textColor="@color/black_50"
                android:textSize="@dimen/sp_32"
                android:layout_marginHorizontal="@dimen/dp_8"/>

            <com.app.tensquare.ui.customview.TextViewPoppinsRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/all_subjects_question_bank_released_by_m_p_board"
                android:textSize="14sp"
                android:textColor="#424242"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_15"/>



        </LinearLayout>

<!--    </ScrollView>-->



</LinearLayout>