<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.initialsetup.SelectLanguageActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_6"
            android:src="@drawable/ic_baseline_navigate_before_24"
            app:tint="#333333" />


        <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:text="@string/select_class"
            android:textColor="#161616"
            android:textSize="@dimen/sp_30" />


    </FrameLayout>


    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_160"
        android:orientation="vertical">

        <!--<com.app.elearning.ui.customview.TextViewPoppinsMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Select Class"
            android:textColor="#033631"
            android:textSize="@dimen/sp_18" />-->


        <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
            android:id="@+id/txtHighSchool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginHorizontal="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/rounded_background_green"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:drawableEndCompat="@drawable/ic_arrow_down_white"
            android:paddingHorizontal="@dimen/dp_20"
            android:textSize="@dimen/sp_18" />

        <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
            android:id="@+id/txtIntermediate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:layout_marginHorizontal="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/rounded_background_green"
            android:backgroundTint="#D0C2D1"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/twelfth"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_weight="1"
        android:gravity="bottom|center"
        android:orientation="horizontal">

<!--        android:background="@drawable/component_icon"-->
        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/component_icon"
            android:scaleType="fitXY" />

    </LinearLayout>

</LinearLayout>