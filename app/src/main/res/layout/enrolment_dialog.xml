<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_15"
        android:background="@drawable/bg_rect_solid_white_10"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgClose"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/bg_circle_shadowed_white"
            android:padding="@dimen/dp_9"
            android:src="@drawable/ic_cross" />

        <LinearLayout
            android:id="@+id/llDetailCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/bg_rect_black_stroke"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/ic_bg_diagonal_corner_left"
                    android:paddingLeft="-18dp"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:src="@drawable/ic_tick_2" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:src="@drawable/ic_running_class_gray_2x" />

            </RelativeLayout>

            <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                android:id="@+id/txtActiveClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:text="Active: 10th/12th Grade"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />

            <com.app.tensquare.ui.customview.TextViewPoppinsRegular
                android:id="@+id/txtValidTill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_20"
                android:text="Valid Till : 20-8-2022"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_20" />


        </LinearLayout>

        <com.app.tensquare.ui.customview.TextViewPoppinsMedium
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/not_enroled_yet"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_20" />


        <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
            android:id="@+id/txtChoosePlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:background="@drawable/bg_btn_light_black"
            android:gravity="center"
            android:text="@string/choose_a_plan"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />


    </LinearLayout>


</RelativeLayout>