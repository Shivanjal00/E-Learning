<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"-->

            <RelativeLayout
                android:id="@+id/rlProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:paddingHorizontal="@dimen/dp_27">

                <!--<androidx.cardview.widget.CardView
                    android:id="@+id/numoProfile"
                    android:layout_width="@dimen/eightydp"
                    android:layout_height="@dimen/eightydp"
                    android:layout_margin="@dimen/sevendp"
                    app:cardCornerRadius="@dimen/fiftydp"
                    app:cardElevation="@dimen/fivedp">-->

<!--                <com.google.android.material.imageview.ShapeableImageView-->
<!--                    android:id="@+id/imgProfile"-->
<!--                    android:layout_width="@dimen/dp_60"-->
<!--                    android:layout_height="@dimen/dp_60"-->
<!--                    android:layout_centerVertical="true"-->
<!--                    android:src="@drawable/profile_place_holder"-->
<!--                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />-->

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profile_place_holder" />



                <!--android:background="@drawable/bg_shadow_bottom_rounded"-->
                <!--</androidx.cardview.widget.CardView>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/imgProfile"
                    android:orientation="vertical">

                    <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="John"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_20" />

                    <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                        android:id="@+id/txtClassName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="10th Class"
                        android:textColor="@color/gray_150"
                        android:textSize="@dimen/dp_15" />
                </LinearLayout>


                <!--
                                <ImageView
                                    android:layout_width="@dimen/dp_50"
                                    android:layout_height="@dimen/dp_50"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:padding="@dimen/dp_15"
                                    android:src="@drawable/ic_arrow_full_right" />
                -->


            </RelativeLayout>


            <com.app.tensquare.ui.customview.TextViewPoppinsRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="@string/preferred_language"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_20"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_12">

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:id="@+id/txtEng"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="English"
                    android:textColor="@color/lang_gray"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_20"/>

                <Switch
                    android:id="@+id/swtchLang"
                    android:layout_width="48dp"
                    android:layout_height="26dp"
                    android:track="@drawable/switch_btn_on_bg"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"/>

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:id="@+id/txtHindi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="हिन्दी"
                    android:textColor="@color/lang_gray"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_10"/>


            </androidx.appcompat.widget.LinearLayoutCompat>



            <View
                android:id="@+id/rectangle_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/gray_5" />

            <LinearLayout
                android:id="@+id/llMyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_profile" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/my_profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyDownloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/sp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_download_thin"
                    app:tint="@color/purple_700" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/my_downloads"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llFaqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_faqs" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/faqs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llEnrolmentPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_28">

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_enrolment_plan" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:singleLine="true"
                    android:text="@string/enrolment_plans"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMyTxns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_txns" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/my_txn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_about_us" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/about_us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llContactUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_contact_us" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/contact_us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_terms" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/terms_and_conditions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_30"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_drawer_logout" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:id="@+id/txtLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_25"
                android:paddingVertical="@dimen/dp_15">

                <ImageView
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_delete_account"
                    app:tint="#083A35" />

                <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                    android:id="@+id/txtDeleteAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:singleLine="true"
                    android:text="@string/str_delete_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_18" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/gray_5" />

            <com.app.tensquare.ui.customview.TextViewPoppinsMedium
                android:id="@+id/tvVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version - 1.0.0"
                android:textSize="@dimen/sp_14"
                android:textColor="#08604F"
                android:paddingHorizontal="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
