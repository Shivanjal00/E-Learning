<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/bg_rect_gray_stroke_solid"
    android:paddingHorizontal="@dimen/dp_15"
    android:paddingVertical="@dimen/dp_23">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgIcon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_sample_bank_1" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_toLeftOf="@id/txtAmt"
        android:layout_toRightOf="@id/imgIcon"
        android:orientation="vertical">

        <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
            android:id="@+id/txtQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="HDFC Credit Card"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />


        <com.app.tensquare.ui.customview.TextViewPoppinsMedium
            android:id="@+id/txtAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtQues"
            android:layout_marginTop="@dimen/dp_5"
            android:maxLines="1"
            android:text="22 March 2020"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <com.app.tensquare.ui.customview.TextViewPoppinsSemiBold
        android:id="@+id/txtAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:maxLines="1"
        android:text="â‚¹ 8,000"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_15" />


</RelativeLayout>